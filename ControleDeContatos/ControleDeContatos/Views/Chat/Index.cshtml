@model List<ControleDeContatos.Models.Cliente.ContatoViewModel>
@{
    ViewData["Title"] = "Chat de clientes";
}

<br />

<div class="w-50">
    <div class="input-group">
        <div class="form-outline w-50" data-mdb-input-init>
            <input type="search" id="form1" class="form-control bg-white" />
        </div>
        <button type="button" class="btn btn-primary" data-mdb-ripple-init>
            <span class="material-symbols-outlined h-25">
                search
            </span>
        </button>
    </div>
</div>

<br />

<div class="card">
    <ul class="list-group list-group-flush">
        @if (Model != null && Model.Any())
        {   
            foreach (var contatoViewModel in Model)
            { 
                <a asp-controller="Chat" asp-action="Chat_Privado" asp-route-id="@contatoViewModel.ContatoModel.Id" style="text-decoration:none">
                    <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">
                        <div>
                            <img src=@contatoViewModel.ContatoModel.GetImagePath() onerror="this.onerror=null; this.src='/img/sem-foto.jpeg'" alt="contato" style="width:45px; height:45px" class="rounded-circle">
                            @contatoViewModel.ContatoModel.Nome
                        </div>
                        <span class="bg-info rounded-pill text-center" style="width: 25px; height:25px; color:#fff;">14</span>
                    </li>
                </a>
            }
        }
    </ul>
</div> 