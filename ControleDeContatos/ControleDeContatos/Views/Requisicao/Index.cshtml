@model List<ControleDeContatos.Models.Requisicao.RequisicaoViewModel>
@{
    ViewData["Title"] = "Requisições do usuário";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

@if (TempData["MensagemSucesso"] != null)
{

    <div class="alert alert-success mb-0 alert-dismissible fade show d-flex" id="alertExample" role="alert" data-mdb-color="secondary">
        <span class="material-symbols-outlined" style="padding-right:5px;">
            check_circle
        </span>
        @TempData["MensagemSucesso"]
        <button type="button" class="btn-close ms-2" data-mdb-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["MensgemErro"] != null)
{
    <div class="alert alert-danger mb-0 alert-dismissible fade show d-flex" id="alertExample" role="alert" data-mdb-color="secondary">
        <button type="button" class="btn-close" id="close-alert" aria-label="Close"></button>
        <span class="material-symbols-outlined" style="padding-right:5px;">
            error
        </span>
        @TempData["MensgemErro"]
    </div>

}

<h1 class="display-4">Requisições:</h1>

<br />

<div>
    <div class="card">
        <div class="mb-2 ps-1 pe-1">
            <input type="submit" class="btn btn-primary btn-sm" value="Novo" />
        </div>

        <div class=" d-flex flex-row mt-3">
            <div class="input-group mb-3 ps-1 pe-1">
              <span class="input-group-text" id="basic-addon1">Nº</span>
              <input
                type="text"
                class="form-control w-25"
                aria-describedby="basic-addon1"
              />
            </div>

            <div class="input-group mb-3 ps-1 pe-1">
                <span class="input-group-text" id="basic-addon1">Usuário</span>
                <input type="text"
                       class="form-control w-25"
                       aria-describedby="basic-addon1" />
                <input type="text"
                       class="form-control w-25"
                       aria-describedby="basic-addon1" />
            </div>


            <div class="input-group mb-3 ps-1 pe-1">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Situação</label>
                </div>
                <select class="custom-select" id="inputGroupSelect01">
                    <option value="">Selecione</option>
                    <option value="">Aberto</option>
                    <option value="">Encerrados</option>
                </select>
            </div>
        </div>

        <div class="mb-1 ps-1 pe-1">
            <input type="submit" class="btn btn-primary btn-sm" value="Buscar"/>
            <input type="submit" class="btn btn-info btn-sm" value="Minhas Requisições" />
            <input type="submit" class="btn btn-info btn-sm" value="Filtros" />
        </div>
    </div>

    <br />

    <table class="table table-striped table-hover table-bordered table-resizable table-responsive" width="100%" id="table-requisicoes">

        <thead>
            <tr>
                <th class="text-center" scope="col">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                    </div>
                </th>
                <th class="text-center" scope="col">Nº</th>
                <th class="text-center" scope="col">Requisição</th>
                <th class="text-center" scope="col">Status</th>
                <th class="text-center" scope="col">Data de cadastro</th>
                <th class="text-center" scope="col">Data de entrega</th>
                <th class="text-center" scope="col">Responsavel</th>
                <th class="text-center" scope="col">Horas trabalhadas</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ControleDeContatos.Models.Requisicao.RequisicaoViewModel requisicaoViewModel in Model)
                {
                    <tr>
                        <th class="text-center" scope="col">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="@requisicaoViewModel.requisicao.id_requisicao" id="flexCheckDefault" />
                            </div>
                        </th>
                        <td>@requisicaoViewModel.requisicao.id_requisicao</td>
                        <td>@requisicaoViewModel.requisicao.titulo_requisicao</td>
                        <td style="background-color:@requisicaoViewModel.statusReq.color; color:black;">@requisicaoViewModel.statusReq.descricao</td>
                        <td>@requisicaoViewModel.requisicao.data_cadastro</td>
                        <td>@requisicaoViewModel.requisicao.data_entrega</td>
                        <td>@requisicaoViewModel.requisicao.responsavel</td>
                        <td>@requisicaoViewModel.requisicao.horas_trabalhadas</td>
                    </tr>
                }
            }
        </tbody>

    </table>
</div>

<br />