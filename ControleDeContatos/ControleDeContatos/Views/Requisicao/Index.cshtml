@model List<ControleDeContatos.Models.Requisicao.RequisicaoViewModel>
@{
    ViewData["Title"] = "Requisições do usuário";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

@if (TempData["MensagemSucesso"] != null)
{

    <div class="alert alert-success mb-0 alert-dismissible fade show d-flex" id="alertExample" role="alert" data-mdb-color="secondary">
        <span class="material-symbols-outlined" style="padding-right:5px;">
            check_circle
        </span>
        @TempData["MensagemSucesso"]
        <button type="button" class="btn-close ms-2" data-mdb-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["MensgemErro"] != null)
{
    <div class="alert alert-danger mb-0 alert-dismissible fade show d-flex" id="alertExample" role="alert" data-mdb-color="secondary">
        <button type="button" class="btn-close" id="close-alert" aria-label="Close"></button>
        <span class="material-symbols-outlined" style="padding-right:5px;">
            error
        </span>
        @TempData["MensgemErro"]
    </div>

}

<h1 class="display-4">Requisições:</h1>

<br />

<div>
    <div>
        <div class="mb-2 ps-1 pe-1 pt-1">
            <a class="btn btn-primary btn-sm d-inline-flex">
                <span class="material-symbols-outlined">
                    add
                </span>
                Novo
            </a>
        </div>

        <div class="card d-flex flex-row mt-3">
            <div class="input-group mb-3 ps-1 pe-1 pt-3">
              <span class="input-group-text" id="basic-addon1">Nº</span>
              <input
                type="text"
                class="form-control w-25"
                aria-describedby="basic-addon1"
              />
            </div>

            <div class="input-group mb-3 ps-1 pe-1 pt-3">
                <span class="input-group-text" id="basic-addon1">Usuário</span>
                <input type="text"
                       class="form-control w-25"
                       aria-describedby="basic-addon1" />
                <input type="text"
                       class="form-control w-25"
                       aria-describedby="basic-addon1" />
            </div>


            <div class="input-group mb-3 ps-1 pe-1 pt-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Situação</label>
                </div>
                <select class="custom-select" id="inputGroupSelect01">
                    <option value="">Selecione</option>
                    <option value="">Aberto</option>
                    <option value="">Encerrados</option>
                </select>
            </div>
        </div>

        <div class="mb-1 ps-1 pe-1 pt-3">
            <a class="btn btn-primary btn-sm d-inline-flex">
                <span class="material-symbols-outlined">
                    search
                </span>
                Buscar
            </a>
            <a class="btn btn-info btn-sm d-inline-flex" style="color:#fff;" id="minhasReq-btn">
                <span class="material-symbols-outlined">
                    view_list
                </span>
                Minhas requisições
            </a>
            <a class="btn btn-secondary btn-sm d-inline-flex">
                <span class="material-symbols-outlined">
                    filter_alt
                </span>
                Filtros
            </a>
        </div>
    </div>

    <br />
    <div class="table-container"></div>
</div>

<br />