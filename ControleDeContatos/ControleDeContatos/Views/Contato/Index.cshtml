@model List<ContatoModel>
@{
    ViewData["Title"] = "Registo de contatos";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<h1 class="display-4">Lista de contatos:</h1>

<div class="text-center">
    
    <table class="table">

        <thead class="thead-dark">
            <tr>
                <th scope="col">Nº</th>
                <th scope="col">
                    <span class="material-symbols-outlined">
                        account_circle
                    </span>
                </th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col">
                    <span class="material-symbols-outlined">
                        edit
                    </span>
                </th>
                <th scope="col">
                    <span class="material-symbols-outlined">
                        delete
                    </span>
                </th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ContatoModel contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td> <img src=@contato.GetImagePath() onerror="this.onerror=null; this.src='/img/sem-foto.jpeg'" alt="contato" style="width:45px; height:45px" class="rounded-circle"></td>
                        <td>@contato.Nome</td>
                        <td>@contato.Email</td>
                        <td>@contato.Celular</td>
                        <td><a class="btn btn-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Editar">Editar</a></td>
                        <td><a class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="Apagar">Apagar</a></td>
                    </tr>
                }    
            }
        </tbody>

    </table>
</div>
<br />
<a class="btn btn-primary" asp-controller="Contato" asp-action="Criar">Adicionar contato</a>