@model ControleDeContatos.Models.Usuario.EditarContaModel
﻿@using ControleDeContatos.Enums
@{
    ViewData["Title"] = "Editar conta";
}
<h1 class="display-4">Editar conta:</h1>

<div class="card shadow p-3 mb-5 bg-white rounded">

    <form method="post" enctype="multipart/form-data" asp-controller="Usuario" asp-action="AtualizarConta">

        <input type="hidden" asp-for="Id" />
        <div class="d-flex">
            <div>
                <div class="form-group">
                    <br />
                    <label class="picture" for="picture_upload" tabindex="0">
                        <span class="exibe_foto">Nova foto de perfil:</span>
                        <input type="file" accept="image/jpeg" class="custom-file-input" id="picture_upload" name="picture_upload" />
                    </label>
                </div>
            </div>

            <div class="boxInputs" style="margin-top:40px;">
                <div class="form-outline" data-mdb-input-init>
                    <input type="text" id="typeText" class="form-control" asp-for="Nome" />
                    <label class="form-label" for="typeText">Nome</label>
                </div>
                @Html.ValidationMessageFor(x => x.Nome)
                <br />
                <div class="form-outline" data-mdb-input-init>
                    <input type="email" id="typeText" class="form-control" asp-for="Email" />
                    <label class="form-label" for="typeText">E-mail</label>
                </div>
                @Html.ValidationMessageFor(x => x.Email)
                <br />
                <div class="form-outline" data-mdb-input-init>
                    <input type="tel" id="typeText" class="form-control" asp-for="Login" />
                    <label class="form-label" for="typeText">Login</label>
                </div>
                @Html.ValidationMessageFor(x => x.Login)
                <br />

                <div class="input-group mb-3">
                    <div class="form-outline" data-mdb-input-init>
                        <input type="password" id="typeText" class="form-control txtPassword" asp-for="New_Password" />
                        <label class="form-label" for="typeText">Password</label>
                    </div>
                </div>
                <br />

                <div class="input-group mb-3">
                    <div class="form-outline" data-mdb-input-init>
                        <input type="password" id="typeText" class="form-control txtPassword" asp-for="Confirm_New_Password" />
                        <label class="form-label" for="typeText">Confirm password</label>
                    </div>
                </div>

                <span class="material-symbols-outlined show-password">
                    visibility
                </span>
            </div>
        </div>
        <br />

        <button type="submit" class="btn btn-primary">Salvar</button>
        <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Voltar</a>

    </form>
</div>